!#/bin/sh
gksudo -i
print "Install python-pip ..."
apt-get install python-pip
print "Install markdown ..."
pip install markdown

print "Install git ..."
apt-get install git

print "Dowload howtoapp-course folder from: github.com/voidcode/.howtoapp-course.git"
cd /tmp
git clone github.com/voidcode/.howtoapp-course.git
mv /tmp/.howtoapp-course/ ~/.howtoapp-course/